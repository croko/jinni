== render 'layouts/slider'
section#blog
  .container
    .row
      .section-title.text-center.col-sm-12.col-md-12.col-lg-12
        .space
    .container
      .row
        .section-title.text-center.col-sm-12.col-md-12.col-lg-12
          h2= t "titles.project.main_page_title"
          hr
          h5= t "titles.project.main_page_message"
          .bigspace
          /- cache @projects_cache_key do
          == render partial: 'projects', locals: {projects: @projects} if @projects.any?
== render 'offer'

-if @users.any?
  -cache @users_cache_key do
    == render 'team'

-cache @foundations_cache_key do
  == render 'foundations'

- if @finished_projects.any?
  /-cache @finished_projects_cache_key do
  == render 'finished_projects'
