              =link_to '#', class: 'pull-left' do
                =image_tag(@project.main_images.first.thumb.url, class: 'media-object small')
            .media-body
              h6.media-heading= link_to '#' do
                |Top 10 Trending Themes
              p.small Pellentesque massa eu nulla consequat sed porttitor arcu

          .dwidget.tags
            .widget-title
              h4 Tags
              hr
              br
              ul.tag-lists
                li= link_to 'Web Design', '#'
                li= link_to 'Development', '#'
                li= link_to 'Wordpress', '#'
                li= link_to 'Design', '#'
                li= link_to 'Blogging', '#'

  -if @project.user == current_user
    .row
      .col-md-offset-2.col-md-6.wow.fadeIn {data-wow-delay="0.8s"}
        = link_to t('.edit', :default => t("helpers.links.edit")), edit_project_path(@project), class: 'btn btn-default st-btn'
